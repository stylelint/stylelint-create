{
  "name": "create-stylelint",
  "version": "0.5.0",
  "description": "The initialization script for Stylelint.",
  "keywords": [
    "stylelint",
    "create",
    "init",
    "cli",
    "setup"
  ],
  "repository": "stylelint/create-stylelint",
  "funding": [
    {
      "type": "opencollective",
      "url": "https://opencollective.com/stylelint"
    },
    {
      "type": "github",
      "url": "https://github.com/sponsors/stylelint"
    }
  ],
  "license": "MIT",
  "author": "stylelint",
  "type": "module",
  "main": "create-stylelint.mjs",
  "bin": {
    "create-stylelint": "./create-stylelint.mjs"
  },
  "files": [
    "dist",
    "create-stylelint.mjs"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:esbuild": "node esbuild.config.js",
    "clean": "git clean -xdf dist",
    "type-check": "concurrently \"npm run type-check:src\" \"npm run type-check:test\"",
    "type-check:src": "tsc -p tsconfig.json --noEmit",
    "type-check:test": "tsc -p tsconfig.test.json --noEmit",
    "start": "node create-stylelint.mjs",
    "format": "prettier . --write --cache",
    "lint": "concurrently --kill-others-on-fail \"npm run lint:formatting\" \"npm run lint:js\" \"npm run lint:md\" \"npm run lint:packagejson\" \"npm run lint:types\"",
    "lint:formatting": "prettier . --check --cache",
    "lint:js": "eslint",
    "lint:md": "remark . --quiet --frail",
    "lint:packagejson": "npmPkgJsonLint .",
    "lint:types": "tsc",
    "pretest": "npm run lint",
    "test": "vitest run",
    "watch": "vitest watch",
    "release": "np --no-release-draft"
  },
  "prettier": "@stylelint/prettier-config",
  "npmpackagejsonlint": {
    "extends": "@stylelint/npm-package-json-lint-config"
  },
  "remarkConfig": {
    "plugins": [
      "@stylelint/remark-preset"
    ]
  },
  "dependencies": {
    "arg": "^5.0.2",
    "cosmiconfig": "^9.0.0",
    "ora": "^8.1.1",
    "picocolors": "^1.1.1",
    "preferred-pm": "^4.0.0",
    "prompts": "^2.4.2",
    "semver": "^7.6.3",
    "terminal-link": "^3.0.0"
  },
  "devDependencies": {
    "@stylelint/npm-package-json-lint-config": "^5.1.0",
    "@stylelint/prettier-config": "^3.0.0",
    "@stylelint/remark-preset": "^5.1.1",
    "@types/prompts": "^2.4.9",
    "@types/semver": "^7.5.8",
    "@types/which-pm-runs": "^1.0.2",
    "@vitest/coverage-v8": "^2.1.8",
    "concurrently": "^9.1.2",
    "esbuild": "0.24.2",
    "eslint": "^9.16.0",
    "eslint-config-stylelint": "^23.0.0",
    "memfs": "^4.15.3",
    "np": "^10.1.0",
    "remark-cli": "^12.0.1",
    "typescript": "^5.7.2",
    "vitest": "^2.1.6"
  },
  "engines": {
    "node": ">=18.19.0"
  }
}
